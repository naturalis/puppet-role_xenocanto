#settings for the debug environment
debug:
    db:
        host: <%= scope.lookupvar('role_xenocanto::conf::db_host') %>
        user: <%= scope.lookupvar('role_xenocanto::conf::db_user') %>
        password: <%= scope.lookupvar('role_xenocanto::conf::db_password') %>
        database: <%= scope.lookupvar('role_xenocanto::conf::db_name') %>
    debug: TRUE

#settings for the production environment
prod:
    db:
        host: <%= scope.lookupvar('role_xenocanto::conf::db_host') %>
        user: <%= scope.lookupvar('role_xenocanto::conf::db_user') %>
        password: <%= scope.lookupvar('role_xenocanto::conf::db_password') %>
        database: <%= scope.lookupvar('role_xenocanto::conf::db_name') %>
    debug: FALSE

